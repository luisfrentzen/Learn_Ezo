<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticePreferencesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extra"
            android:text="@string/set_your_daily_goal"
            android:layout_marginStart="3dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="3dp"
            android:textSize="18sp"
            android:text="@string/daily_goal_helps_you_learn_more_consistently_everyday_don_t_worry_you_can_change_it_anytime_later_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:checkedButton="@id/five_min"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

            <edu.bluejack20_1.learn_ezo.CustomRadio
                android:id="@+id/five_min"
                style="@style/CustomRadio"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/_5_minutes"
                android:textStyle="bold" />

            <edu.bluejack20_1.learn_ezo.CustomRadio
                android:id="@+id/ten_min"
                style="@style/CustomRadio"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/_10_minutes"
                android:textStyle="bold" />

            <edu.bluejack20_1.learn_ezo.CustomRadio
                android:id="@+id/fifteen_min"
                style="@style/CustomRadio"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/_15_minutes"
                android:textStyle="bold" />

        </RadioGroup>

        <Button
            android:id="@+id/next_button_2"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded"
            android:text="@string/next"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>